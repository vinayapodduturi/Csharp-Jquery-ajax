@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Forgot Password Page";
}


<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <br/> <br/>
        <p>  Please enter your email id below and click Next</p>
        <input type="text" class="form-control" name="username" id="username" placeholder="xxx@example.com" /><br />
        <a id="forgot" href="@Url.Action("send_email", "User", new { username = Sravani })">Submit</a>
        <!--<button type="button" id="forgot-btn" class="btn btn-primary">Submit</button> --->
        <a href="/Home/Index" type="button" id="cancel-btn" class="btn btn-default">Cancel</a>
    </div>
    </div>
@section Scripts
{
    <script src="@Url.Content("~/Content/Scripts/forgotPassword.js")"></script>
}