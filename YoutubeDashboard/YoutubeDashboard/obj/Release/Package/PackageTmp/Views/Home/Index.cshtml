@{
    ViewBag.Title = "Login";
}


<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <div class="col-md-12">
            <h2>Login</h2>
            <div id="login-error" class="text-danger"></div>
        </div>
        
        <div class="col-md-12 login-form">
            <div class="form-group"><input type="text" class="form-control" name="username" id="username" placeholder="Username" /></div>
            <div class="form-group"><input type="password" class="form-control" name="password" id="password" placeholder="Password" /></div>
            <div class="form-group"><input type="checkbox" value="remember-me" id="remember_me"> Remember me</div>
            <div class="form-group">
              <button type="button" id="login-btn" class="btn btn-primary" data-loading-text="Logging In...">Login</button>
              <a href="/Home/ForgotPassword">Forgot Password?</a>
            </div>            
        </div> 
    </div>
</div>
@section Scripts
{
    <script src="@Url.Content("~/Content/Scripts/login.js")"></script>
}
